<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- res/values/themes.xml -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Base.Theme.ToDoList</item>
    </style>

    <!-- styles.xml -->
    <style name="make_yourse">
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--    style for calendar view-->
    <style name="StyleTextAppearanceStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="StyleDateTextAppearanceStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CalendarViewTitle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!--    text style for new schedule-->
    <style name="textStyleNewSchedule" parent="Theme.AppCompat">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">14sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!--    style for row table-->
    <style name="tableRowStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:paddingStart">10sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:layout_marginStart">12sp</item>
        <item name="android:layout_marginEnd">12sp</item>
    </style>

    <!--    style for date picker-->
    <style name="datePicker" parent="Theme.AppCompat">
        <item name="android:textColor">@color/btn_pickDate</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|end</item>
    </style>

    <style name="btn_datePicker" parent="Theme.AppCompat">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <!--    style for item schedule in table layout-->
    <style name="item_schedule">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="item_schedule2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_less</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

</resources>